<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.modules.widget.actions.MoveWidgetAction">
        <property name="name" value="moveWidget"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>

    <bean class="org.jahia.modules.widget.actions.CustomizeFromAction">
        <property name="name" value="customizeWidgetArea"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>

    <bean class="org.jahia.modules.widget.actions.CreateWidgetAction">
        <property name="name" value="createWidget"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>

    <bean class="org.jahia.modules.widget.actions.ResetWidgetAction">
        <property name="name" value="resetWidgetArea"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>
</beans>